<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:key="@string/pref_image_source_key"
        android:title="@string/pref_image_source"
        android:defaultValue="0"
        android:entries="@array/pref_image_source_entries"
        android:entryValues="@array/pref_image_source_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />


    <SwitchPreference
        android:key="@string/pref_auto_add_to_list_key"
        android:title="@string/pref_auto_add_to_list"
        android:defaultValue="true"
        android:summaryOn="Auto add new custom items to keywords, modalities, or sections lists"
        android:summaryOff="Do not add new custom items to keywords, modalities, or sections lists"
        />

