<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Widget.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
    </style>

    <style name="Widget.ActionBar.Transparent">
        <item name="android:background">@android:color/transparent</item>


    </style>

    <style name = "toolbarStyle">
        <item name="android:textColor">?attr/actionMenuTextColor</item>
    </style>

    <!-- Action Bar Spinner -->
    <style name = "spinner_actionBar_title">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_marginTop">-2dp</item>
        <item name="android:textColor">?attr/actionMenuTextColor</item>
    </style>

    <style name = "spinner_actionBar_subtitle">
        <item name = "android:textSize">12dp</item>
        <item name = "android:layout_marginTop">-2dp</item>
        <item name = "android:paddingLeft">1dp</item>
        <item name="android:textColor">?attr/actionMenuTextColor</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- i decided to not use.....-->
