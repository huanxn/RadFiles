    <style name="stickyListHeader"> <!--parent="android:style/Widget.Holo.Light.TextView.ListSeparator"-->
<!--        <item name="android:drawableBottom">@drawable/list_section_divider</item> -->
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/text_box_height</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textSize">@dimen/veryLargeTextSize</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingTop">0dip</item>
        <item name="android:background">@color/default_colorHeaderText</item>
    </style>


    <style name="sectionHeader"> <!--parent="android:style/Widget.Holo.Light.TextView.ListSeparator"-->
        <item name="android:drawableBottom">@drawable/list_section_divider</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/text_box_height</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/default_colorHeaderText</item>
        <item name="android:textSize">@dimen/standardTextSize</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingTop">10dip</item>
    </style>


    <style name="sectionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/text_box_height</item>
        <item name="android:textSize">@dimen/standardTextSize</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="sectionText2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">-6dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingBottom">8dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/text_dark_secondary</item>
    </style>

    <style name="sectionEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">@dimen/standardTextSize</item>
        <item name="android:gravity">bottom</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textColorHint">@color/text_dark_hint</item>
        <item name="android:inputType">textCapSentences|textNoSuggestions</item>
    </style>

    <style name="textButtonStyle">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/layout_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="textButtonName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">@dimen/largeTextSize</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingTop">10dip</item>
    </style>

    <style name="textButtonDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_dark_secondary</item>
        <item name="android:textSize">@dimen/standardTextSize</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingTop">5dip</item>
    </style>

    <style name="sectionSearch">
        <item name="android:drawableTop">@drawable/search_section_divider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">@dimen/veryLargeTextSize</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="listSortable">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="imageGridView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">350dp</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:verticalSpacing">1dp</item>
        <item name="android:horizontalSpacing">0dp</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:gravity">center</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="customSpinnerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textColorHint">@color/text_dark_hint</item>  <!-- doesn't work:  must be set in custom java class -->
        <item name="android:textSize">@dimen/standardTextSize</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <!-- Cards -->
    <style name="cardTitle"> <!--parent="android:style/Widget.Holo.Light.TextView.ListSeparator"-->
        <item name="android:drawableBottom">@drawable/list_section_divider</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/text_box_height</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/default_colorHeaderText</item>
        <item name="android:textSize">@dimen/standardTextSize</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">1dp</item>
    </style>


    <style name="cardText1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/text_box_height</item>
        <item name="android:textSize">@dimen/cardTextSize</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="cardText2">
    <item name="android:layout_width">match_parent</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">12sp</item>
    <item name="android:paddingLeft">8dip</item>
    <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    <item name="android:textColor">@color/text_dark_secondary</item>
    </style>

    <style name="cardText3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingBottom">8dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/text_dark_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="toolbarText">
        <item name="android:textSize">@dimen/toolbarTextSize</item>
        <item name="android:textColor">?attr/actionMenuTextColor</item>
    </style>

    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">@color/showcase_background</item>
        <item name="sv_showcaseColor">@color/showcase_circle</item>
        <item name="sv_buttonText">Next</item>
        <item name="sv_tintButtonColor">false</item>
        <item name="sv_titleTextAppearance">@style/ShowcaseTitleText</item>
        <item name="sv_detailTextAppearance">@style/ShowcaseDetailText</item>
    </style>

    <style name="CustomShowcaseThemeEnd" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">@color/showcase_background</item>
        <item name="sv_showcaseColor">@color/showcase_circle</item>
        <item name="sv_buttonText">OK</item>
        <item name="sv_tintButtonColor">false</item>
        <item name="sv_titleTextAppearance">@style/ShowcaseTitleText</item>
        <item name="sv_detailTextAppearance">@style/ShowcaseDetailText</item>
    </style>

    <style name="ShowcaseTitleText" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">@color/default_colorAccent</item>
        <item name="android:textSize">@dimen/extremelyLargeTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShowcaseDetailText" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textSize">@dimen/largeTextSize</item>
    </style>

    <style name="ContextualActionModeStyle" parent="@style/Widget.AppCompat.ActionMode">
        <item name="android:background">@color/white_text</item>
        <item name="android:height">@dimen/toolbar_size</item>
    </style>

    <style name="ContextualOverflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_dots_vertical_grey600_24dp</item>
    </style>

</resources>


