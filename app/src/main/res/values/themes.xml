<resources>

    <!-- extend one of the Theme.AppCompat themes -->
    <style name="MaterialTheme.Light" parent="MaterialTheme.Light.Base"/>
    <style name="MaterialTheme.Light.Base" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- customize the color palette -->
        <item name="colorPrimary">@color/default_colorPrimary</item>
        <item name="colorPrimaryDark">@color/default_colorPrimaryDark</item>
        <item name="colorAccent">@color/default_colorAccent</item>

        <item name="colorControlNormal">@color/default_colorControlNormal</item>
        <item name="colorControlActivated">@color/default_colorControlHighlight</item>
        <item name="colorControlHighlight">@color/default_colorControlHighlight</item>

        <item name="actionMenuTextColor">@color/white_text</item>

        <item name="android:windowBackground">@color/default_background_light_grey</item>

        <item name="textAppearanceLargePopupMenu">@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large</item>
        <item name="textAppearanceSmallPopupMenu">@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowActionModeOverlay">true</item>

        <item name="android:actionModeStyle">@style/ContextualActionModeStyle</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>



    </style>

    <!-- No appcompat actionbar.  ie custom toolbar defined -->
    <style name="MaterialTheme.Light.NoActionBar" parent="MaterialTheme.Light.Base">
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:actionBarWidgetTheme">@style/Theme.MyTheme.Widget</item>
        <item name="actionBarWidgetTheme">@style/Theme.MyTheme.Widget</item>
    </style>

    <!-- Contextual action bar -->
    <style name="ContextualActionMode.Light" parent="MaterialTheme.Light.NoActionBar">
        <item name="android:actionOverflowButtonStyle">@style/ContextualOverflow</item>
    </style>


    <!-- search text color -->
    <style name="Theme.MyTheme.Widget" parent="@android:style/Theme.Holo">
        <item name="android:textColorHint">@color/text_light_hint</item>
        <item name="android:textColor">@color/text_light</item>
        <!-- your other custom widget styles -->
    </style>

    <!-- translucent fading action bar: extend one of the MaterialTheme base themes -->
    <style name="MaterialTheme.Light.TranslucentActionBar" parent="MaterialTheme.Light.TranslucentActionBar.Base"/>
    <style name="MaterialTheme.Light.TranslucentActionBar.Base" parent="MaterialTheme.Light.Base">

        <item name="android:actionBarStyle">@style/Widget.ActionBar.Transparent</item>
        <item name="actionBarStyle">@style/Widget.ActionBar.Transparent</item>


        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>

        <item name="android:windowContentOverlay">@null</item>


    </style>


    <!--<item name="android:windowContentOverlay">@android:drawable/</item>-->
    <style name="HoloTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/Widget.ActionBar</item>
        <item name="android:windowActionBarOverlay">false</item>

    </style>

    <style name="HoloTheme.TranslucentActionBar">
        <item name="android:actionBarStyle">@style/Widget.ActionBar.Transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>



</resources>