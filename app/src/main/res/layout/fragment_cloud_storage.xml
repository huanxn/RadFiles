<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.huantnguyen.radcases.app.CloudStorageActivity$CloudStorageFragment">


    <Button
        android:id="@+id/backup_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="test backup"
        android:onClick="onClick_Button">
        </Button>
    <Button
        android:id="@+id/exportCSV_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="test exportCSV"
        android:onClick="onClick_Button"
        android:layout_toRightOf="@id/backup_button">
    </Button>


    <Button
        android:id="@+id/restore_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="test restore"
        android:onClick="onClick_Button"
        android:layout_below="@id/backup_button">
    </Button>
    <Button
        android:id="@+id/importCSV_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="test importCSV"
        android:onClick="onClick_Button"
        android:layout_toRightOf="@id/restore_button"
        android:layout_alignBottom="@id/restore_button">
    </Button>

    <Button
        android:id="@+id/fix_DB_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="fix DB: images table"
        android:onClick="onClick_Button"
        android:layout_below="@id/restore_button">
    </Button>
</RelativeLayout>
