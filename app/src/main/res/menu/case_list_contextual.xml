      xmlns:tools="http://schemas.android.com/tools"
      tools:context="com.radicalpeas.radfiles.app.CaseCardListActivity">

    <!-- Share selected cases, should appear as action button -->
    <!-- android:actionProviderClass="android.widget.ShareActionProvider"-->
    <item
        android:id="@+id/menu_share"

        android:icon="@drawable/ic_share_variant_white_24dp"
        android:title="@string/action_share"
        app:showAsAction="always"/>

    <!-- Delete selected cases, should appear as action button -->
    <item
        android:id="@+id/menu_delete"
        android:icon="@drawable/ic_delete_white_24dp"
        android:title="@string/action_delete"
        app:showAsAction="ifRoom"/>

    <!-- Delete selected cases, should appear as action button -->
    <item
        android:id="@+id/menu_select_all"
        android:title="@string/action_select_all"
        app:showAsAction="never"/>
