<?xml version="1.0"?>

    <menu tools:context="com.huantnguyen.radfiles.app.CaseDetailActivity$CaseDetailFragment" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:app="http://schemas.android.com/apk/res-auto">



    <!-- Edit this case, should appear as action button -->
    <item android:title="@string/action_edit" app:showAsAction="ifRoom" android:icon="@drawable/ic_pencil_white_24dp" android:id="@+id/menu_edit"/>
    
    <!-- Add image to this case, should appear as action button -->
    <item android:title="@string/action_camera" app:showAsAction="ifRoom" android:icon="@drawable/ic_camera_white_24dp" android:id="@+id/menu_camera"/>

    <!-- Toggle favorites "star", should appear as action button -->
    <item android:title="@string/add_star" app:showAsAction="ifRoom" android:icon="@drawable/ic_star_outline_white_24dp" android:id="@+id/menu_star"/>

    <!-- Delete this case, should appear as action button -->
    <item android:title="@string/action_delete" app:showAsAction="never" android:icon="@drawable/ic_delete_grey600_24dp" android:id="@+id/menu_delete"/>

    <!-- Open the help tutorial ShowcaseView, should always be hidden in overflow menu -->
    <item android:title="@string/action_help" app:showAsAction="never" android:icon="@drawable/ic_help_circle_grey600_24dp" android:id="@+id/menu_help"/>

</menu>